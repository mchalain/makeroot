
menu "system initialization"
choice 
    prompt "init system"
    default INIT_BUSYBOX if BUSYBOX
    default SYSTEMD if FHS_ANDROID
    default INIT_GNU

    config INIT_BUSYBOX
        bool "busybox init"
        depends on BUSYBOX
        select INITTAB

    config INIT_GNU
        bool "linux utils init"
        depends on GNU
        select INITTAB

    config SYSTEMD
        bool "new systemd start system"

endchoice

config INITTAB
    bool

config INITTAB_FILE
    string "inittab file"
    default "init/config/inittab.default"
    depends on INITTAB
    
config SYSTEMV_STARTUP
    bool "systemV startup system"
    depends on INITTAB

if SYSTEMV_STARTUP

    config RCS_FILE
        string "rcS starting file path"
        default "init/config/rcS.default"

endif

endmenu
