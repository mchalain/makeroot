config FRAMEBUFFER
    bool

choice
    prompt "Graphic System"

    config FRAMEBUFFER_ONLY
        bool "Frame Buffer  only"
        select FRAMEBUFFER
        
    config DIRECTFB
        bool "DirectFB"
        select FRAMEBUFFER

    config X11
        bool "X11 server"
        select FRAMEBUFFER

    config WAYLAND
        bool "Wayland"
        select LIBFFI
        select EXPAT

endchoice

if WAYLAND
comment "Wayland configuration"

config WAYLAND_VERSION
    string "Wayland version"
    default "1.1.0"

choice
    prompt "Compositor"
    default WESTON

    config WESTON
        bool "Weston default Wayland Compositor"
        select LIBXKBCOMMON
        select LIBUNWIND

endchoice

config WESTON_OPTIONS
    string "Weston autogen options"
    depends on WESTON
    default "--disable-libunwind" if !LIBUNWIND

endif

config DRM
    bool "Direct Renderer Manager (help)"
    help
        The Direct Renderer Manager is a Kernel feature to enable.
        This configuration activates the libdrm build.

config MESA
    bool "Mesa OpenGL library"
    select DRM

if MESA
config MESA_OPTIONS
    string "mesa autogen options"
    default " --enable-gles2 --disable-gallium-egl --with-egl-platforms=x11,wayland,drm --enable-gbm --enable-shared-glapi --with-gallium-drivers=r300,r600,swrast,nouveau" if I386
endif

config LIBXKBCOMMON
    bool
    prompt  "libxkbcommon translating evdev keycodes to keysyms" if SHOW_ALL

if DIRECTFB
config DIRECTFB_MULTIAPPS
	bool "DirectFB with multi applications"
	default y
	select LINUX_FUSION
endif
