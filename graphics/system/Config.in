config FRAMEBUFFER
    bool

choice
    prompt "Graphic System"

    config FRAMEBUFFER_ONLY
        bool "Frame Buffer  only"
        select FRAMEBUFFER
        
    config DIRECTFB
        bool "DirectFB"
        select FRAMEBUFFER

    config X11
        bool "X11 server"
        select FRAMEBUFFER

    config WAYLAND
        bool "Wayland"

endchoice

if WAYLAND
choice
    prompt "Compositor"
    default WESTON

    config WESTON
        bool "Weston default Wayland Compositor"

endchoice

config WESTON_OPTIONS
    string "Weston autogen options"
    depends on WESTON
    default "--disable-libunwind" if !LIBUNWIND

config LIBUNWIND
    bool
    default y if WESTON  && !ARM

config DRM
    bool "Direct Renderer Manager (help)"
    help
        The Direct Renderer Manager is a Kernel feature to enable.
        This configuration activates the libdrm build.

config MESA
    bool "Mesa OpenGL library"
    select DRM

config MESA_OPTIONS
    string "mesa autogen options"
    depends on MESA
    default " --enable-gles2 --disable-gallium-egl --with-egl-platforms=x11,wayland,drm --enable-gbm --enable-shared-glapi --with-gallium-drivers=r300,r600,swrast,nouveau" if I386

config LIBFFI
    bool "libffi a Portable Foreign Function Interface Library "
    default y if WAYLAND

config LIBXKBCOMMON
    bool "libxkbcommon translating evdev keycodes to keysyms"
    default y if WESTON
    default n

endif
