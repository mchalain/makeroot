config FRAMEBUFFER
    bool
config EGL
	bool

choice
    prompt "Graphic System"

    config FRAMEBUFFER_ONLY
        bool "Frame Buffer  only"
        select FRAMEBUFFER
        
    config DIRECTFB
        bool "DirectFB"
        select FRAMEBUFFER

    config X11
        bool "X11 server"
        select FRAMEBUFFER

    config WAYLAND
        bool "Wayland"
        select LIBFFI
        select EXPAT
        select WAYLAND_LIB

endchoice

if WAYLAND
comment "Wayland configuration"

config WAYLAND_VERSION
    string "Wayland version"
    default "1.1.0"

choice
    prompt "Compositor"
    default WESTON

    config WESTON
        bool "Weston default Wayland Compositor"
        select LIBXKBCOMMON
        select LIBUNWIND
        select PIXMAN
        select EGL

endchoice

config WESTON_OPTIONS
    string "Weston autogen options"
    depends on WESTON
    default "--disable-libunwind" if !LIBUNWIND

endif

config LIBXKBCOMMON
    bool
    prompt  "libxkbcommon translating evdev keycodes to keysyms" if SHOW_ALL

if DIRECTFB
config DIRECTFB_MULTIAPPS
	bool "DirectFB with multi applications"
	default y
	select LINUX_FUSION
endif

