menu "C language library : libc"
choice
    default LIBC_TOOLCHAIN

    prompt "libc version"
    config LIBC_TOOLCHAIN
        bool "the libc from the toolchain"

    config LIBC_GLIBC
        bool "The Gnu Libc"
        select LIBC_NLS
        select LIBC_NSL
        select LIBC_RCP
        select LIBC_LDSO
        select LIBC_RT

    config LIBC_UCLIBC
        bool "uClibc"
        select LIBC_NLS
        select LIBC_NSL
        select LIBC_RCP
        select LIBC_LDSO
        select LIBC_RT

    config LIBC_NEWLIB
        bool "newlib RedHat embedded libc"

    config LIBC_BIONIC
        bool "bionic the Google embedded libc"
        select LIBC_NLS
        select LIBC_NSL
        select LIBC_RCP
        select LIBC_LDSO
        select LIBC_RT

	config LIBC_MUSL_SP
		bool "musl embedded libc for linux"
        select LIBC_LDSO
        select LIBC_NSL
        select LIBC_RT

endchoice

config LIBC_NLS
	bool
	prompt "libc supports Native Language NLS" if LIBC_TOOLCHAIN
config LIBC_NSL
	bool
	prompt "libc supports Network Services Library " if LIBC_TOOLCHAIN
	help
		gethostbyname getservbyname, getpwnam
		This library may be a part of libc
config LIBC_RCP
	bool
	prompt "libc supports Remote Command Protocol RCP" if LIBC_TOOLCHAIN
config LIBC_LDSO
	bool
	prompt "libc supports Dynamic Linker LDSO (-ldl)" if LIBC_TOOLCHAIN
config LIBC_RT
	bool
	prompt "libc supports RealTime functions" if LIBC_TOOLCHAIN
	
config LINARO_RUNTIME
	bool "Linaro Runtime libraries"
	default y if LINARO && LIBC_TOOLCHAIN

config LIBC_GLIBC_VERSION
    string "version"
    default 2.17
    depends on LIBC_GLIBC

config LIBC_GLIBC_DEFCONFIG
    string "config file"
    default libc/config/glibc_defconfig
    depends on LIBC_GLIBC

config LIBC_UCLIBC_VERSION
    string "version"
    default 0.9.33
    depends on LIBC_UCLIBC

config LIBC_UCLIBC_DEFCONFIG
    string "config file"
    default libc/config/uclibc_defconfig
    depends on LIBC_UCLIBC

config LIBC_NEWLIB_VERSION
    string "version"
    default linaro-2.1.0-2014.02 if LINARO
    default 2.0.0
    depends on LIBC_NEWLIB

config LIBC_NEWLIB_CONFIGURE
    string "configure options"
    default "--disable-newlib-supplied-syscalls"
    depends on LIBC_NEWLIB

config PATCHELF
	bool "patchelf : binary utility"
	help
	patchelf is a small utility to modify the dynamic linker inside a binary.
	Example need to launch /usr/bin/foobar but foobar must load 
	/usr/lib/mylibc/libc.so instead /lib/ld.so

endmenu
