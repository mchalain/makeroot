config U_IMAGE
    bool

choice
    prompt "bootloader"
    config U_BOOT
        bool "u-boot"
        select U_IMAGE

    config U_BOOT_UX500
        bool "u-boot from igloocommunity (snowball)"
        select U_IMAGE
        depends on BOARD_SNOWBALL

endchoice

config U_BOOT_TARGET
	string "the SoC target name"
	default "snowball" if BOARD_SNOWBALL
	default BOARD_NAME

    
