config U_IMAGE
    bool

choice
    prompt "bootloader"
    config U_BOOT
        bool "u-boot"
        select U_IMAGE
endchoice

config U_BOOT_VERSION
	string "u-boot version"
	depends on U_BOOT
	default "ux500" if BOARD_SNOWBALL

config U_BOOT_TARGET
	string "the SoC target name"
	depends on U_BOOT
	default "snowball" if BOARD_SNOWBALL
	default BOARD_NAME

    
