menu "Kernel Configuration"

config LINUX
    bool

config LINUX_LINARO
    bool

choice
    prompt "Kernel version"
    config LINUX_STD
        bool "Linux standard"
        select LINUX

    config LINUX_LINARO_RELEASE
        bool "Linux from Linaro Team"
        select LINUX
        select LINUX_LINARO

    config LINUX_LINARO_TRACKING
        bool "Linux from Linaro Team git repository"
        select LINUX
        select LINUX_LINARO

    config LINUX_IGLOO
        bool "igloo community Linux source for Snowball board"
        select LINUX

    config LINUX_CUSTOM
        bool "customized Linux "
        select LINUX

endchoice

config KERNEL_VERSION
    string "version"
    depends on LINUX
    default "3.7.1" if LINUX_STD
    default "3.8" if LINUX_LINARO_RELEASE

config LINUX_LINARO_RELEASE_Y
	int "linaro release year"
	range 12 13
	depends on LINUX_LINARO_RELEASE
	default 13

config LINUX_LINARO_RELEASE_M
	int "linaro release month"
	range 01 12
	depends on LINUX_LINARO_RELEASE
	default 02

config LINUX_CUSTOM_URL
    string "linux source tree URL (compressed file or git repository)"
    default "git://git.kernel.org/linux/kernel/git/arm/arm-soc.git"
    depends on LINUX_CUSTOM

config KERNEL
    string
    default "linux-linaro-tracking" if LINUX_LINARO_TRACKING
    default "linux-linaro" if LINUX_LINARO_RELEASE
    default "linux" if LINUX
    prompt "Kernel name" if LINUX_CUSTOM

config KERNEL_DEFCONFIG
    string "default configuration file"
    default "kernel/config/u8500_defconfig"

config KERNEL_IMAGE
    string "kernel image name"
    default "zImage"
    depends on !U_IMAGE

config BOOTDIR
    string
    default "system/boot" if FHS_ANDROID
    default "boot" if FHS_LINUX

endmenu
